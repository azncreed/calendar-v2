<p id="notice"><%= notice %></p>

<h1>Booking Appointments</h1>

<%=  month_calendar events: @calendar_advisors do |day, advisors| %>
  <div><strong><%= day.to_s(:short) %></strong></div>
<% advisors.each do |advisor| %>
    <div>
      <%= link_to advisor.name, advisor %>
    </div>
  <% end %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>Recurring</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.start_time %></td>
        <td><%= advisor.end_time %></td>
        <td><%= advisor.recurring %></td>
        <td><%= link_to 'Show', advisor %></td>
        <td><%= link_to 'Edit', edit_advisor_path(advisor) %></td>
        <td><%= link_to 'Destroy', advisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advisor', new_advisor_path %>
